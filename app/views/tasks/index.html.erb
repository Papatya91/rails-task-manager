<h1>My tasks</h1>


  <% @tasks.each do |task| %>
    <h2><%= link_to task.title, task_path(task) %></h2>
      <input type="checkbox" <%= task.completed ? 'checked' : '' %>>
      <span class="checkmark"></span>
     <%= link_to task_path(task),
      method: :delete,
      data: { confirm: "Are you sure that you want to delete?" } do %>"
      <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
  <% end %>


<div style="margin-top: 20px; width: 100%; height: 10px; border-bottom: 1px solid #e3e3e3; text-align: center; margin-bottom: 30px;">
  <span style="font-size: 15px; background-color: #ffffff; padding: 0px 10px;">
   <%= link_to "Add a new task", tasks_new_path %>
  </span>
</div>


